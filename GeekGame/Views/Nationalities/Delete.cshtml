@model GeekGame.Models.TblNationality

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Nationality</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" alt="@Model.Nationality" class="img-fluid img-thumbnail" width="200" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nationality)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.Nationality)
            {
                case 1:
                    <span>Japanese</span>
                    break;
                case 2:
                    <span>Chinese</span>
                    break;
                case 3:
                    <span>Korean</span>
                    break;
                case 4:
                    <span>Thai</span>
                    break;
                default:
                    break;
            }
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
